
<body>
	<main>
		<h3>User Info</h3>
		<%= form_for (@user) do |f| %>
			<% if @user.errors.any? %>
				<%= @user.errors.count %>errors prohibited this obj from being saved:<br/>
				<%= @user.errors.full_messages.each do |message| %>
					<%= message %>
				<% end %><br/>
			<% end %>

			<%= f.label :Name %><br/>
			<%= f.text_field :name %><br/>
			<%= f.label :Image %><br/>
			<%= f.attachment_field :profile_image %><br/>
			<%= f.label :Introduction %><br/>
			<%= f.text_area :introduction %><br/>
			<%= f.submit "Update User", :class => "btn btn-primary" %>
		<% end %>
	</main>
</body>